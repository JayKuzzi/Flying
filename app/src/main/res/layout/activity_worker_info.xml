<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:background="@drawable/lyout_board4"
    android:gravity="center"
    android:orientation="vertical">

        android:gravity="center"
        android:textSize="22sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/lyout_board"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/worker_info_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#00ffffff"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:hint="请输入配送员姓名"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#fefefe"
            android:textColorHint="#fefefe" />
        <ImageView
            android:id="@+id/worker_info_get_contact1"
            android:layout_marginRight="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@mipmap/contact"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/lyout_board"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/worker_info_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#00ffffff"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:hint="请输入配送员手机"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="number"
            android:textColor="#fefefe"
            android:textColorHint="#fefefe" />
        <ImageView
            android:id="@+id/worker_info_get_contact2"
            android:layout_marginRight="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@mipmap/contact"/>
    </LinearLayout>

    <TextView
        android:textColor="#fefefe"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="注：抢单后可在我的订单查看"
        android:textSize="16sp" />

    <Button
        android:layout_marginTop="10dp"
        android:background="@drawable/lyout_board2"
        android:id="@+id/worker_info_ok"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:textColor="#F4FBFE"
        android:textAllCaps="false"
        android:text="立即抢单" />



</LinearLayout>