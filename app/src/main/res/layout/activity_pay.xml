<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@drawable/lyout_board4"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/lyout_board">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#00ffffff"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="请选择支付方式"
        android:textColor="#3F4F55"
        android:textSize="25sp" />
        </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >
        <TextView
            android:id="@+id/pay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#00ffffff"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="8"
            android:textColor="#F73F1D"
            android:textSize="40sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#00ffffff"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="元"
            android:textColor="#F73F1D"
            android:textSize="28sp" />
    </LinearLayout>



    <RadioGroup
        android:id="@+id/pay_method"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/wechat_pay"
            android:layout_marginTop="10dp"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:background="@mipmap/wechatpay"
            android:button="@null" />
        <RadioButton
            android:id="@+id/ali_pay"
            android:layout_marginTop="10dp"
            android:button="@null"
            android:background="@mipmap/zhifubao"
            android:layout_width="150dp"
            android:layout_height="50dp"/>
        <RadioButton
            android:id="@+id/paypal_pay"
            android:layout_marginTop="10dp"
            android:button="@null"
            android:background="@mipmap/paypal"
            android:layout_width="170dp"
            android:layout_height="50dp"/>

    </RadioGroup>

    <Button
        android:id="@+id/pay_ok"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/lyout_board3"
        android:text="模拟支付"
        android:textAllCaps="false"
        android:textColor="#F4FBFE"
        android:textSize="20sp" />


</LinearLayout>