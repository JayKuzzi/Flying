<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/lyout_board4"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/lyout_board"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/send_info_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#00ffffff"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:hint="请输入寄件人姓名"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#fefefe"
            android:textColorHint="#fefefe" />
        <ImageView
            android:id="@+id/send_info_get_contact1"
            android:layout_marginRight="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@mipmap/contact"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/lyout_board"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/send_info_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#00ffffff"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:hint="请输入寄件人手机"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="number"
            android:textColor="#fefefe"
            android:textColorHint="#fefefe" />
        <ImageView
            android:id="@+id/send_info_get_contact2"
            android:layout_marginRight="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@mipmap/contact"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/lyout_board"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/send_info_address"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#00ffffff"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:hint="请输入寄件人地址"
            android:maxLines="3"
            android:textColor="#fefefe"
            android:textColorHint="#fefefe" />
            <ImageView
                android:id="@+id/send_info_get_loc"
                android:layout_marginRight="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@mipmap/location"/>
    </LinearLayout>


    <TextView
        android:textColor="#fefefe"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="注：右侧按钮可自动定位"
        android:textSize="16sp" />

    <Button
        android:layout_marginTop="10dp"
        android:background="@drawable/lyout_board2"
        android:id="@+id/send_info_ok"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:textColor="#F4FBFE"
        android:textAllCaps="false"
        android:text="确认" />



</LinearLayout>